<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:gridSpec="0|8|#0093eeff|K:#ee8700ff:16,l:72,l:16,r|S:#83ee00ff:16,0,l:16,56,l:16,0,r"
    android:paddingRight="4dp"
    android:background="#ffbbdefb">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:id="@+id/imageView1"
        android:background="@drawable/appicon"
        android:layout_marginBottom="0.0dp" />
    <TextView
        android:text="Email"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_marginLeft="10dp"
        android:textColor="#ff200808" />
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText1" />
    <TextView
        android:text="Password"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginLeft="10dp"
        android:textColor="#ff281515" />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password" />

    <TextView
        android:text="*Invalid credentials! Please try again!"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="#ffec1616" />

    <TextView
        android:text="Register."
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/textViewReg"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.ActionMode.Title"
        android:width="60dp"
        android:textIsSelectable="true"
        android:onClick="registerClick"
        />
    <TextView
        android:text="Forgot Password."
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPw"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.ActionMode.Title"
        android:width="30dp"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="170dp"
        android:textIsSelectable="true" />
    <Button
        android:text="Login"
        android:layout_width="match_parent"
        android:layout_height="65.5dp"
        android:id="@+id/button1"
        android:layout_marginTop="0.0dp"
        android:layout_marginBottom="14.0dp"
        android:background="#ff1e88e5"
        android:onClick="loginClick"
        android:textSize="30dp" />
</LinearLayout>