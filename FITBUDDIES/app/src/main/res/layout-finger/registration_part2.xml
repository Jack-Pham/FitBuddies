<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:gridSpec="0|8|#0093eeff|K:#ee8700ff:16,l:72,l:16,r|S:#83ee00ff:16,0,l:16,56,l:16,0,r"
    android:paddingRight="4dp"
    android:background="#ffbbdefb">

    <TextView
        android:text="Weight"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstname"
        android:textColor="#ff120e0e"
        android:layout_marginTop="15dp" />
    <EditText
        android:inputType="number"
        android:layout_width="96.5dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText1" />
    <TextView
        android:text="Lbs"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="27.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginTop="-25dp"
        android:layout_marginLeft="100dp" />
    <TextView
        android:text="Intensity"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tlastname"
        android:textColor="#ff090202"
        android:layout_marginTop="10dp" />
    <RadioGroup
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="139.5dp"
        android:id="@+id/radioGroup1"
        android:layout_marginBottom="32.0dp">
        <RadioButton
            android:layout_width="221.5dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Low (one day a week)"
            android:id="@+id/rblow" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mild (2 days a week)"
            android:id="@+id/rbmild" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intermediate (3 days a week)"
            android:id="@+id/rbintermediate" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intense (4+ days week)"
            android:id="@+id/rbIntense" />
    </RadioGroup>
    <TextView
        android:text="Fitness Goal"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="#ff0c0303"
        android:layout_marginTop="-15dp" />
    <RadioGroup
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup2"
        android:layout_marginBottom="37.5dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Get Fitter"
            android:id="@+id/radioButton1" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lose weight/Burn fat"
            android:id="@+id/radioButton2" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gain muscle"
            android:id="@+id/radioButton3" />
        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Tone"
                android:id="@+id/radioButton1" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sculpt (Body building)"
                android:id="@+id/radioButton2" />
        </RadioGroup>
    </RadioGroup>
    <Button
        android:text="Register"
        android:layout_width="match_parent"
        android:layout_height="65.5dp"
        android:id="@+id/button1"
        android:layout_marginTop="0.0dp"
        android:layout_marginBottom="14.0dp"
        android:background="#ff1e88e5"
        android:textSize="30dp" />

</LinearLayout>